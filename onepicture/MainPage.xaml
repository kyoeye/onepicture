<Page x:Class="onepicture.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:onepicture"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="#FF2291DE"
      mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
            <RowDefinition Height=" *" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Frame Name="Frame" Grid.RowSpan="4" />
        <AppBarButton Width="55"
                      Height=" 50"
                      HorizontalAlignment="Left"
                      Click="hanbao_Click">
            <TextBlock Margin="0,3,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Segoe MDL2 Assets"
                       Foreground="#FFFFECEC"
                       Text=" &#xE970;" />
        </AppBarButton>
        <!--  pivot  -->

        <!--  pivot  -->
        <SplitView Name="mynemu"
                   Grid.RowSpan="4"
                   DisplayMode="Overlay"
                   OpenPaneLength=" 225">
            <SplitView.Pane>
                <ListBox Name="Listboxmenu"
                         Background="#FF1F78B6"
                         SelectionChanged="Listboxmenu_SelectionChanged">
                    <ListBoxItem Name="onepicture">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="单图" />
                    </ListBoxItem>
                    <ListBoxItem Name="huandeng">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="幻灯式" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="抱枕" />
                    </ListBoxItem>
                    <ListBoxItem Name="setting">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="设置" />
                    </ListBoxItem>

                </ListBox>

            </SplitView.Pane>
        </SplitView>
        <Pivot SelectionChanged="Pivot_SelectionChanged">
            <PivotItem Grid.Row="1">
                <Grid>
                    <TextBlock Text="1" />
                </Grid>
            </PivotItem>
            <PivotItem Grid.Row="1">
                <Grid>
                    <TextBlock Text="2" />
                </Grid>
            </PivotItem>

        </Pivot>

        <Border Grid.Row="0"
                Height=" 50"
                Background="#FF2291DE" />
        <RelativePanel Grid.Row="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       AlignRightWithPanel="True">
            <StackPanel Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button x:Name="home_page"
                        Background="#FF2291DE"
                        Content="首页"
                        Foreground="White" />
                <Button x:Name="fenlei_page"
                        Background="#FF2291DE"
                        Content="分类"
                        Foreground="White" />
            </StackPanel>
        </RelativePanel>
        <TextBlock Grid.Row="0"
                   Margin="60,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Segoe UI"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#FFFFECEC"
                   Text="全年龄" />
    </Grid>
</Page>
