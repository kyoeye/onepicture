<Page x:Class="onepicture.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:onepicture"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="#FF2291DE"
      mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height=" *" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Height=" 50"
              Background="#FF2291DE" />


        <TextBlock Grid.Row="0"
                   Margin="60,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="迷你简橄榄"
                   FontSize="20"
                   Foreground="#FFFFECEC"
                   Text="全年龄" />
        <Frame Name="Frame" Grid.Row="1" />

        <!--  按钮  -->

        <AppBarButton Width="55"
                      Height=" 50"
                      HorizontalAlignment="Left"
                      Click="hanbao_Click">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Segoe MDL2 Assets"
                       Foreground="#FFFFECEC"
                       Text=" &#xE970;" />
        </AppBarButton>

        <SplitView Name="mynemu"
                   Grid.Row="1"
                   DisplayMode="Overlay"
                   OpenPaneLength=" 250"
                   PaneBackground="#FF59A2D4">
            <SplitView.Pane>
                <ListBox Name="Listboxmenu"
                         Background="#FF1F78B6"
                         SelectionChanged="Listboxmenu_SelectionChanged">
                    <ListBoxItem Name="onepicture">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="单图" />
                    </ListBoxItem>
                    <ListBoxItem Name="huandeng">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="幻灯式" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="抱枕" />
                    </ListBoxItem>
                    <ListBoxItem Name="setting">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="设置" />
                    </ListBoxItem>

                </ListBox>

            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
