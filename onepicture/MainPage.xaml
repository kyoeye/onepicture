<Page x:Class="onepicture.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:onepicture"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="#FF2291DE"
      mc:Ignorable="d">
    <Page.Resources>
        <Storyboard x:Name="storyboardRectangle">
            <DoubleAnimation AutoReverse="True"
                             Duration="0:0:1"
                             From="1.0"
                             RepeatBehavior="1x"
                             Storyboard.TargetName="home_image_pixiv"
                             Storyboard.TargetProperty="Opacity"
                             To="0" />
            <DoubleAnimation AutoReverse="True"
                             Duration="0:0:1"
                             From="1.0"
                             RepeatBehavior="1x"
                             Storyboard.TargetName="backimage"
                             Storyboard.TargetProperty="Opacity"
                             To="0" />
        </Storyboard>

    </Page.Resources>
    <Grid>
        <Grid.Background>

            <ImageBrush x:Name="backimage"
                        ImageSource="{Binding ElementName=home_image_pixiv,
                                              Path=Source,
                                              Mode=TwoWay}"
                        Opacity="0.5"
                        Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
            <RowDefinition Height=" *" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <SplitView  Grid.RowSpan="4">
            <Pivot Padding="0,0,0,0" Name="pivot" SelectionChanged="Pivot_SelectionChanged" >
                <PivotItem >
                    <Grid>
                        <Image Name="home_image_pixiv" />
                        <ScrollViewer >
                            <StackPanel Name="border1" Visibility="Collapsed" >
                                <Image Source ="{Binding ElementName=home_image_pixiv, Path=Source ,Mode=TwoWay}" Opacity="0" />
                                <Border Width="400" Height="150" Background="#FFE4E4E4" />
                                
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                   
                </PivotItem>
                <PivotItem>
                    <Grid>
                        <TextBlock Text="2" />
                    </Grid>
                </PivotItem>
            </Pivot>

        </SplitView >

        <Frame Name="Frame" Grid.RowSpan="4" />
        <Border Grid.Row="0"
                Height=" 50"
                Background="#FF2291DE" />

      
        <AppBarButton Width="55"
                      Height=" 50"
                      HorizontalAlignment="Left"
                      Click="hanbao_Click">
            <TextBlock Margin="0,3,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Segoe MDL2 Assets"
                       Foreground="#FFFFECEC"
                       Text=" &#xE970;" />
        </AppBarButton>

        <RelativePanel Grid.Row="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       AlignRightWithPanel="True">
            <StackPanel Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button  Padding="10,10,10,10"
                        Background="#FF2291DE"
                        Click="home_page_Click"
                        x:Name="home_page"
                        Content="首页"
                        Foreground="White" >
                   
                </Button>
                <Button  Padding="10,10,10,10"
                        Background="#FF2291DE"
                        Click="fenlei_page_Click"
                         x:Name="fenlei_page" 
                       Content="分类"
                        Foreground="White" HorizontalAlignment="Center" >
                    
                </Button>
            </StackPanel>
        </RelativePanel>
        <TextBlock Grid.Row="0"
                   Margin="60,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Segoe UI"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#FFFFECEC"
                   Text="全年龄" />
        <SplitView Name="mynemu"
                   Grid.RowSpan="4"
                   DisplayMode="Overlay"
                   OpenPaneLength=" 300">

            <SplitView.Pane>
                <ListBox Name="Listboxmenu"
                         Background="#FF1F78B6"
                         SelectionChanged="Listboxmenu_SelectionChanged">
                    <ListBoxItem Padding="0,0,0,0" >
                         <Image  Source="{Binding ElementName=home_image_pixiv, Path=Source, Mode=TwoWay }" Stretch="UniformToFill"  Height="200"/>
                    </ListBoxItem>
                    <ListBoxItem Name="onepicture">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="单图" />
                    </ListBoxItem>
                    <ListBoxItem Name="huandeng">
                        <TextBlock FontSize="20"
                                   Foreground="#FFEDE4EB"
                                   Text="幻灯式" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock FontSize="19"
                                   Foreground="#FFEDE4EB"
                                   Text="抱枕" />
                    </ListBoxItem>
                    <ListBoxItem Name="setting">
                        <TextBlock FontSize="19"
                                   Foreground="#FFEDE4EB"
                                   Text="设置" />
                    </ListBoxItem>

                </ListBox>

            </SplitView.Pane>
        </SplitView>

    </Grid>
</Page>
