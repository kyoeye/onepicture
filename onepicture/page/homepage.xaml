<Page x:Class="onepicture.page.homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:onepicture.page"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.Background>

            <ImageBrush x:Name="backimage"
                        ImageSource="{Binding ElementName=homethephoto,
                                              Path=Source,
                                              Mode=TwoWay}"
                        Opacity="0.5"
                        Stretch="UniformToFill" />
        </Grid.Background>
        <Hub>
            <HubSection Foreground="White" Header="首页">
                <DataTemplate>
                    <Grid Width="400" />
                </DataTemplate>
            </HubSection>
            <HubSection Foreground="White" Header="分类">
                <DataTemplate>
                    <Grid />
                </DataTemplate>
            </HubSection>
        </Hub>

        <!--
          <Pivot>
            <PivotItem Header="首页">
                <Grid>
                    <Image Name="homethephoto" Margin="5,5,5,20" />
                </Grid>
            </PivotItem>
            <PivotItem Header="分类" />

        </Pivot>

        -->

    </Grid>
</Page>
